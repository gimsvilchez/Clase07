<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonLongtaskMainThread"
        android:layout_width="304dp"
        android:layout_height="46dp"
        android:text="@string/execute_long_task_on_main_thread"
        app:layout_constraintBottom_toTopOf="@+id/buttonLongTaskWorkerThread"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="21dp" />

    <Button
        android:id="@+id/buttonLongTaskWorkerThread"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/execute_long_task_on_worker_thread"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonLongtaskMainThread"
        app:layout_constraintTop_toBottomOf="@+id/buttonLongtaskMainThread" />


</android.support.constraint.ConstraintLayout>